input.onButtonPressed(Button.A, function () { //giving button press a to stop animmation
    led.enable(false)
})
input.onButtonPressed(Button.B, function () { //button press b is animation back on
    led.enable(true)
})
input.onGesture(Gesture.Shake, function () { // this gesture once shaken will show the string screen saver and then display a smiley face
    basic.showString("Screen Saver")
    basic.pause(100)
    basic.showLeds(`
        . . . . .
        . # . # .
        # . . . #
        # . . . #
        # # # # #
        `)
})
